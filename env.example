# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here

# Twitter API Configuration (OAuth 1.0a for posting tweets)
# One centralized Twitter account for all spaces
TWITTER_API_KEY=your_api_key_here
TWITTER_API_SECRET=your_api_secret_here
TWITTER_ACCESS_TOKEN=your_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret_here

# Snapshot Configuration
# Use testnet hub for Sepolia testing, mainnet for production
SNAPSHOT_API_URL=https://testnet.hub.snapshot.org/graphql

# Bot Configuration
CHECK_INTERVAL_MINUTES=15
TWEET_QUEUE_DELAY_SECONDS=60
MAX_RETRIES=3

# Logging
LOG_LEVEL=info 